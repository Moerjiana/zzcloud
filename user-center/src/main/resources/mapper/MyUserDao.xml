<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amay.user.dao.MyUserDao">

    <resultMap type="com.amay.user.entity.MyUser" id="MyUserMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="loginType" column="login_type" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MyUserMap">
        select
          user_id, name, password, login_type
        from zz_user.my_user
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MyUserMap">
        select
          user_id, name, password, login_type
        from zz_user.my_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MyUserMap">
        select
        user_id, name, password, login_type
        from zz_user.my_user
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="loginType != null">
                and login_type = #{loginType}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into zz_user.my_user(name, password, login_type)
        values (#{name}, #{password}, #{loginType})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zz_user.my_user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="loginType != null">
                login_type = #{loginType},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zz_user.my_user where user_id = #{userId}
    </delete>

</mapper>